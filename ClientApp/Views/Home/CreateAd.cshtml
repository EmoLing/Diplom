@using Helper.Ads.ViewModels
@using Model.Ads.Animals
@using Model.Ads.Enums
@model NewAdViewModel

<section>
    <div class="uk-container uk-container-small">
        <div class="uk-background-muted uk-padding uk-panel uk-text-center">
            <form class="uk-form-horizontal uk-margin-small" name="create-ad"
                  asp-action="CreateAd" asp-controller="Home" asp-antiforgery="true" enctype="multipart/form-data">
                <div class="uk-margin">
                    <label class="uk-form-label" for="name">Кличка животного</label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="name" name="name" type="text" placeholder="Кличка животного">
                    </div>
                </div>
                <div class="uk-margin">
                    <label class="uk-form-label" for="kindofanimals">Вид животного</label>
                    <div class="uk-form-controls">
                        <select class="uk-select" id="kindofanimals" name="kindofanimal">
                            @foreach (var kind in Model.KindOfAnimals)
                            {
                                System.Diagnostics.Debugger.Launch();
                                System.Diagnostics.Debugger.Break();

                                <option value="@kind.Guid">@kind.KindName</option>
                            }

                            <option value="other">Другое</option>
                        </select>
                        <input class="uk-input" id="otherkind" type="text"
                               placeholder="Другой вид животного"
                               name="otherkind"
                               style="display:none">
                    </div>
                </div>
                <div class="uk-margin">
                    <label class="uk-form-label" for="colorofanimals">Окрас животного</label>
                    <div class="uk-form-controls">
                        <select class="uk-select" id="colorofanimals" name="color">
                            @foreach (var color in Model.ColorOfAnimals)
                            {
                                <option value="@color.Guid">@color.ColorName</option>
                            }

                            <option value="other">Другой</option>
                        </select>
                        <input class="uk-input" id="othercolor" type="text"
                               placeholder="Другой окрас животного"
                               name="othercolor"
                               style="display:none">
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-form-label">Пол животного</div>
                    <div class="uk-form-controls uk-form-controls-text">
                        <label>
                            <input class="uk-radio" type="radio"
                                   name="sexanimal" value="@SexAnimal.Male"> М
                        </label>
                        <label>
                            <input class="uk-radio" type="radio"
                                   name="sexanimal" value="@SexAnimal.Female"> Ж
                        </label>
                        <label>
                            <input class="uk-radio" type="radio"
                                   name="sexanimal" value="@SexAnimal.Undefined"> Не могу определить
                        </label>
                    </div>
                </div>
                <div class="uk-margin">
                    <label class="uk-form-label" for="caption">Заголовок</label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="caption" name="caption" type="text" placeholder="Заголовок">
                    </div>
                </div>
                <div class="uk-margin">
                    <label class="uk-form-label" for="description">Описание</label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="description" name="description" type="text" placeholder="Описание">
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-form-label">Тип объявление</div>
                    <div class="uk-form-controls uk-form-controls-text">
                        <label><input class="uk-radio" type="radio" name="typeAd" value="@TypeAd.Loss"> Пропажа</label>
                        <label><input class="uk-radio" type="radio" name="typeAd" value="@TypeAd.Find"> Находка</label>
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="js-upload uk-placeholder uk-text-center">
                        <span uk-icon="icon: cloud-upload"></span>
                        <span class="uk-text-middle">Перетащите файлы опустив их здесь или</span>
                        <div uk-form-custom>
                            <input type="file" accept=".jpg,.jpeg,.png" multiple>
                            <span class="uk-link">выберите один</span>
                        </div>
                        <progress id="js-progressbar" class="uk-progress" value="0" max="100" hidden></progress>
                    </div>
                </div>
                <div class="uk-margin">
                    <input class="uk-input" type="text" name="address" id="address"
                           placeholder="Кликните по карте, чтобы узнать адрес" readonly>
                    <div id="map" style="width: 600px; height: 400px"></div>
                    <input class="uk-input" type="text" name="latitude" id="latitude" readonly>
                    <input class="uk-input" type="text" name="longitude" id="longitude" readonly>
                </div>
                <div class="uk-margin">
                    <input class="uk-input uk-button uk-button-default uk-width-1-3" type="submit" />
                    <input class="uk-input uk-button uk-button-default uk-width-1-3" type="reset" />
                </div>
            </form>
        </div>
    </div>
    <script src="/js/createAdScripts.js" type="text/javascript"></script>
    <script src="/js/createAdMap.js" type="text/javascript"></script>
</section>